{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "commonjs",
        "lib": [
            "dom",
            "dom.iterable",
            "es6",
            "es2016",
            "es2017",
            "es2018"
        ],
        "target": "es2017",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "sourceMap": true
    },
    "include": [
        "src/",
    ],
    "exclude": [
        "node_modules",
        "library",
        "local",
        "temp",
        "build",
        "settings",
        "dist"
    ]
}